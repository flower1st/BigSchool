@model LabBigSchool_TruongTheHao.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Following";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Following</h2>
<ul class="course">
    @foreach (var course in Model.UpcomingCourses)
    {
        <li>
            <div class="date">
                <div class="month">
                    @course.Datetime.ToString("MM")
                </div>
                <div class="day">
                    @course.Datetime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecturer">
                    @course.Lecturer.Name

                    @if (course.IsCanceled)
                    {
                        <span class="label label-warning">Canceled</span>
                    }

                    @if (Model.ShowAction && !course.IsCanceled)
                    {
                        <button class="btn btn-default btn-sm js-toggle-follow" data-user-
                                id="@course.LecturerId">Going</button>
                    }

                </span>
                <span class="category">
                    @course.Category.Name
                </span>
                @if (Model.ShowAction)
                {
                    <button data-course-id="@course.LecturerId" class="btn btn-default btn-sm js-toggle-attendance">Following?</button>
                }
            </div>
        </li>
    }
</ul>

